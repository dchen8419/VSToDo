{
	"name": "vstodo",
	"displayName": "VSTodo",
	"description": "Keeping track of stuff",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vstodo.helloWorld",
		"onCommand:vstodo.askQuestion",
		"onCommand:vstodo.refresh",
		"onCommand:vstodo.addTodo",
		"onView:vstodo-sidebar"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vstodo-sidebar-view",
					"title": "VSTodo",
					"icon": "media/checklist.svg"
				}
			]
		},
		"views": {
			"vstodo-sidebar-view": [
				{
					"type": "webview",
					"id": "vstodo-sidebar",
					"name": "VSTodo",
					"icon": "media/checklist.svg",
					"contextualTitle": "VSTodo"
				}
			]
		},
		"commands": [
			{
				"command": "vstodo.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "vstodo.askQuestion",
				"category": "VSTodo",
				"title": "Ask Question"
			},
			{
				"command": "vstodo.refresh",
				"category": "VSTodo",
				"title": "Refresh"
			},
			{
				"command": "vstodo.addTodo",
				"category": "VSTodo",
				"title": "Add Todo From Selection"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-node-resolve": "^13.0.6",
		"@rollup/plugin-typescript": "^8.3.0",
		"@tsconfig/svelte": "^2.0.1",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"concurrently": "^6.4.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"postcss": "^8.4.4",
		"rollup": "^2.60.2",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.10",
		"svelte-preprocess": "^4.9.8",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0"
	},
	"dependencies": {
		"watch": "^1.0.2"
	}
}
